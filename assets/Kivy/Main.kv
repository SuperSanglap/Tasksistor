#:kivy 2.1.0

<TodoCard>
    id: todo 
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    MDFloatLayout: #Bar
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
        md_bg_color: 1, 170/255, 23/255, 1
    MDLabel: #Title
        id: title
        text: root.title
        markup: True
        font_name: "assets/fonts/Poppins-SemiBold.ttf"
        font_size: "20sp"
        size_hint_x: .8
        pos_hint: {"center_x": .46, "center_y": .8}
    MDCheckbox: #Checkbox
        size_hint: None, None
        ripple_scale: 0
        size: "48dp", "48dp"
        unselected_color: 1, 170/255, 23/255, 1
        selected_color: 0, 179/255, 0, 1
        pos_hint: {"center_x": .95, "center_y": .8}
        on_active: app.on_complete(*args, description, bar)
    MDLabel: #Description
        id: description
        text: root.description
        font_name: "assets/fonts/Poppins-Regular.ttf"
        markup: True
        size_hint_x: .82
        line_height: .8
        pos_hint: {"center_x": .47, "center_y": .4}
    MDLabel: #Time
        id: time
        text: root.time
        font_name: "assets/fonts/Poppins-Regular.ttf"
        markup: True
        font_size: "11sp"
        size_hint_x: .7
        line_height: .5
        pos_hint: {"x": .72, "center_y": .07}
MDScreen:
    date: date
    todo_list: todo_list
    name: "main"
    MDFloatLayout:
        md_bg_color: 238/255, 238/255, 238/255, 1
        MDLabel: 
            text: "Tasksistor"
            pos_hint: {"center_x": .56, "center_y": .95}
            font_name: "assets/fonts/Poppins-SemiBold.ttf"
            font_size: "35sp"
        MDLabel:
            id: date
            text: ""
            pos_hint: {"center_x": .565, "center_y": .89}
            font_name: "assets/fonts/Poppins-Regular.ttf"
            font_size: "18sp"
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .89, "center_y": .925}
            user_font_size: "30sp"
            md_bg_color: 1, 170/255, 23/255, 1
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release: 
                root.manager.transition.direction = "left" 
                root.manager.current = "add_todo"
        MDIconButton:
            icon: "delete"
            pos_hint: {"center_x": .72, "center_y": .925}
            user_font_size: "30sp"
            md_bg_color: 1, 170/255, 23/255, 1
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release: 
                app.remove_todo()
        ScrollView:
            do_scroll_y: True            
            do_scroll_x: False
            size_hint_y: .85
            pos_hint: {"center_x": .5, "y": 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 10         
